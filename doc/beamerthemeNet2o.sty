\definecolor{net2oyellow}{rgb}{1, 0.95, 0.8} %light yellow
\definecolor{forthgreen}{rgb}{0.5, 1, 0.3} %light green
\definecolor{forthgray}{rgb}{0.8, 0.8, 0.8} %light gray

\setbeamercolor{headline}{fg=black,bg=net2oyellow}
\setbeamercolor{footline}{fg=black, bg=net2oyellow}
\setbeamerfont{footline}{size=\normalsize,series=\tt}
\setbeamercolor{separation line}{bg=black}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}

\setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=black, bg=net2oyellow}
\setbeamercolor{title in head/foot}{fg=black, bg=net2oyellow}

\setbeamercolor*{normal text}{fg=tachameleon, bg=forthgray}
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=black,bg=net2oyellow}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=ta2orange}

\setbeamercolor*{example body}{fg=black,bg=forthgreen}
\setbeamercolor*{example text}{fg=black,bg=forthgreen}
\setbeamercolor*{example title}{bg=ta3aluminium,fg=black}

%\setbeamercolor{alerted text}{fg=ta3gray}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=ta3skyblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.5ex,dp=0ex,center,leftskip=-1ex,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    {\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=1ex,colsep*=.75ex,sep=0.2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.07\paperwidth}
      \end{column}
      \begin{column}{.70\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Large{\inserttitle}}}\vskip3ex
        \usebeamercolor{author in headline}{\color{fg}\normalsize{\insertauthor}}\vskip3ex
        \usebeamercolor{institute in headline}{\color{fg}\large{\em\insertinstitute}}     
      \end{column}
      \begin{column}{.22\paperwidth}
        \vskip2ex
        \begin{center}
          \includegraphics[width=\linewidth]{net2o-logo.pdf}
        \end{center}
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    %\rule{0pt}{1pt}
  \end{beamercolorbox}
}

