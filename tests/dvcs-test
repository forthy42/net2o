#!/bin/bash
rm -rf dvcs-test.d
mkdir dvcs-test.d
cd dvcs-test.d
PASSPHRASE=1234 gforth ../n2o $* cmd <<EOF
init dvcs-test
sh echo "Eine Datei" >a
sh echo "Noch eine Datei" >b
sh echo "Eine dritte Datei" >c
add a b c
ci -m "Erster Checkin"
sh echo "Eine zweite Zeile" >>b
ci -m "Checkin 2"
sh mkdir xx
sh mv c xx/d
sh echo "Noch etwas mehr" >>xx/d
add xx/d
ci -m "Checkin 3"
sh echo "Eine zweite Zeile" >b
sh ln -s xx/d c
add c
ci -m "Checkin 4"
snap -m "Snapshot 1"
bye
EOF
echo
