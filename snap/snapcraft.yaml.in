#!/bin/bash
N2OVER=$(n2o version)
NET2O=${N2OVER% *}
NET2O=${NET2O#n2o-}
GFORTH=${N2OVER#* }
GFORTH=${GFORTH%-*}
GFORTH=${GFORTH##*-}
cat <<EOF >snapcraft.yaml
name: net2o # you probably want to 'snapcraft register <name>'
base: core20 # the base snap is the execution environment for this snap
version: '$NET2O' # just for humans, typically '1.2+git' or '1.3.2'
summary: net2o snap # 79 char long summary
description: |
  This is the weekly development snapshot of net2o in snap format.

grade: stable # must be 'stable' to release into candidate/stable channels
confinement: strict # use 'strict' once you have the right plugs and slots
type: app
license: AGPL-3.0-or-later # SPDX 2.0 identifiers

package-repositories:
  - type: apt
    components: [main]
    suites: [stable]
    key-id: 60E71A159357533099A0AAF9CAF021DB3B7FA946
    url: https://net2o.de/debian

apps:
  gforth-fast:
    command: usr/bin/gforth-fast
    environment:
      GFORTHPATH: .:\$SNAP/usr/share/net2o-$NET2O:\$SNAP/usr/lib/x86_64-linux-gnu/gforth/$GFORTH:\$SNAP/usr/share/gforth/$GFORTH:\$SNAP/usr/share/gforth/site-forth:~+
      GFORTHCCPATH: \$SNAP/usr/lib/x86_64-linux-gnu/gforth/$GFORTH/amd64/libcc-named:\$SNAP/usr/lib/net2o/$NET2O/amd64/libcc-named
      GFORTHFONTS: \$SNAP/usr/share/fonts/
      LIBGL_DRIVERS_PATH: \$SNAP/usr/lib/x86_64-linux-gnu/dri
      LD_LIBRARY_PATH: \$SNAP/usr/lib/x86_64-linux-gnu/pulseaudio
      GFORTH_GL: glx
      LOCPATH: \$SNAP/usr/lib/locale
      PULSE_SERVER: unix:\$XDG_RUNTIME_DIR/../pulse/native
    plugs:
      - home
      - network
      - netlink-connector
      - x11
      - opengl
      - unity7
      - locale-control
      - audio-playback
      - audio-record
  gforth:
    command: usr/bin/gforth
    environment:
      GFORTHPATH: .:\$SNAP/usr/share/net2o-$NET2O:\$SNAP/usr/lib/x86_64-linux-gnu/gforth/$GFORTH:\$SNAP/usr/share/gforth/$GFORTH:\$SNAP/usr/share/gforth/site-forth:~+
      GFORTHCCPATH: \$SNAP/usr/lib/x86_64-linux-gnu/gforth/$GFORTH/amd64/libcc-named:\$SNAP/usr/lib/net2o/$NET2O/amd64/libcc-named
      GFORTHFONTS: \$SNAP/usr/share/fonts/
      LIBGL_DRIVERS_PATH: \$SNAP/usr/lib/x86_64-linux-gnu/dri
      LD_LIBRARY_PATH: \$SNAP/usr/lib/x86_64-linux-gnu/pulseaudio
      GFORTH_GL: glx
      LOCPATH: \$SNAP/usr/lib/locale
      PULSE_SERVER: unix:\$XDG_RUNTIME_DIR/../pulse/native
    plugs:
      - home
      - network
      - netlink-connector
      - x11
      - opengl
      - unity7
      - locale-control
      - audio-playback
      - audio-record
  n2o:
    command: usr/bin/gforth-fast \$SNAP/usr/bin/n2o
    environment:
      GFORTHPATH: .:\$SNAP/usr/share/net2o-$NET2O:\$SNAP/usr/lib/x86_64-linux-gnu/gforth/$GFORTH:\$SNAP/usr/share/gforth/$GFORTH:\$SNAP/usr/share/gforth/site-forth:~+
      GFORTHCCPATH: \$SNAP/usr/lib/x86_64-linux-gnu/gforth/$GFORTH/amd64/libcc-named:\$SNAP/usr/lib/net2o/$NET2O/amd64/libcc-named
      GFORTHFONTS: \$SNAP/usr/share/fonts/
      LIBGL_DRIVERS_PATH: \$SNAP/usr/lib/x86_64-linux-gnu/dri
      LD_LIBRARY_PATH: \$SNAP/usr/lib/x86_64-linux-gnu/pulseaudio
      GFORTH_GL: glx
      LOCPATH: \$SNAP/usr/lib/locale
      PULSE_SERVER: unix:\$XDG_RUNTIME_DIR/../pulse/native
    plugs:
      - home
      - network
      - netlink-connector
      - x11
      - opengl
      - unity7
      - locale-control
      - audio-playback
      - audio-record

parts:
  prepare:
    plugin: nil
    prime: [-*]
    build-packages:
      - software-properties-common
      - dirmngr
  desktop-glib-only:
    source: .
    source-subdir: glib-only
    plugin: make
    build-packages:
      - libglib2.0-dev
    stage-packages:
      - libglib2.0-bin
  net2o:
    source: https://git.net2o.de/bernd/net2o.git
    source-tag: $NET2O
    plugin: autotools
    autotools-configure-parameters:
      - --prefix=/usr
    after:
      - prepare
      - desktop-glib-only
    build-packages:
      - g++
      - libtool-bin
      - libgps-dev
      - libffi-dev
      - gforth-minos2
    stage-packages:
      - locales
      - locales-all
      - libltdl7
      - libfreetype6
      - libglvnd0
      - libglx0
      - libpng16-16
      - libvulkan1
      - libwayland-client0
      - libwayland-cursor0
      - libwayland-egl1
      - libegl1-mesa
      - libgles2-mesa
      - libgl1
      - libx11-6
      - libxau6
      - libxcb1
      - libxdmcp6
      - libxext6
      - libxrandr2
      - libxrender1
      - gforth-minos2
      - gforth-minos2audio
      - gforth-libcc-gl
      - gforth-libcc-gles
      - gforth-libcc-audio
      - gforth-noto-fonts
      - fonts-awesome
      - libgps-dev
      - libva-dev
      - libgstreamer1.0-dev
      - libgstreamer-plugins-base1.0-0
      - libffi-dev
      - libpulse0
      - libopus0
      - libavcodec58
      - libavutil56
      - libgps26
EOF
